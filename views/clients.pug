include profile.pug
    block loadStyles 
        link(rel="stylesheet" href="stylesheets/clients.css")

    block content   
        p.medium-font Clients
        div.card
            div.card-body
                div.row.container-fluid.border-none
                    div.col-md-3 
                        input.input.form-control.remove-focus(placeholer="Search")
                    div.col-md-6 
                    div.col-md-3.d-flex.justify-content-end
                        button.btn.btn-light.me-4 export
                        button.btn.btn-primary(data-bs-toggle="modal" data-bs-target="#clientModal") Add Client
        
        div.modal.animate__animated.animate__slideInDown.animate__faster#clientModal
            div.modal-dialog.modal-dialog-centered.border-none
                div.modal-content
                    div.modal-body
                        h2.modium-font Client Details
                        form#addClientForm
                            div.form-group.mb-3
                                input.input.form-control.remove-focus(type="text" name="clientName" placeholder="Client Name")
                            div.form-group.mb-3
                                input.input.form-control.remove-focus.client-email#client-email(type="email" name="clientEmail" placeholder="Client Email")
                            div.form-group.mb-3
                                input.input.form-control.remove-focus#country(type="text" name="clientCountry" placeholder="Country")
                            div.form-group.mb-3.d-flex
                                button.btn.btn-light.me-2#code(type="button" disabled) +91
                                input.input.form-control.remove-focus(type="number" name="clientMobile" placeholder="Mobile")
                            div.form-group.mb-3.d-flex
                                button.btn.btn-primary.me-2#add-client-submit(type="submit") Submit
                                button.btn.btn-danger.d-none#add-client-loader(type="button" disabled)
                                    span.spinner-border.spinner-border-sm(role="status" aria-hidden="true")
                                    |   Processing...

    block scripts 
        script(src="javascripts/clients.js")