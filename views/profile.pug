doctype html 
html 
    head 
        title profle
        include bootstrap
        link(rel="stylesheet" href="stylesheets/profile.css")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css")
    body

        - const toolbar = [{label : "Clients", icon : "fas fa-user-secret", link : "/clients"},{label : "Teams", icon : "fas fa-user", link : "/teams"},{label : "Logout", icon : "fa fa-sign-out-alt", link : "/logout"}]
        
        div.sidenav.sidenav-open

        div.section.section-open        
            nav.navbar.navbar-expand-sm.px-3.py-2
                button.btn.toggler 
                    i.fa.fa-align-left
                ul.navbar-nav(style="margin-left : auto; ")
                    each menu of toolbar 
                        li.nav-item 
                            button.btn.toolbar.p-0.ml-2(title=menu.label) 
                                a.nav-link(href=menu.link) 
                                    i(class=menu.icon)
            div 
                block content
                    



        //- include javascript files          
        block scripts               
            script(src="javascripts/profile.js") 